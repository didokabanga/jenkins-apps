pipeline {

  agent any

  environment {
    PATH = "/opt/maven/bin:${env.PATH}"
  }

  stages {

    stage("Git Checkout"){
      steps{
          git branch: 'main', url: 'https://github.com/didokabanga/jenkins-apps.git'
      }
    }

    stage("Maven Build"){
      steps{
          echo "PATH is: ${env.PATH}"
          sh "mvn clean package"
      }
    }

  }

}
